{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "lib": [
      "dom",
      "es2019"
    ],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
